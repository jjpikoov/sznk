{% extends "main.j2" %}
{% block page_content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="margin-top: 100px">
                <h1>Add new  lecture</h1>
                <p>Note: You may need to adjust some CSS based on the size of your logo. The default logo size is 150x50 pixels.</p>
		<form name="add_lecture_form" id="add_lecture_form" style="display: block" method="POST">
			<label for="title">Title</label>
			<input type="text" id="title" name="title" style="display: block; margin-bottom:2px;">
			<label for="date">Date</label>
			<input type="date" id="date" name="date" style="display: block; margin-bottom:2px;">
			<label for="place">Place</label>
			<input type="text" id="place" name="place" style="display: block; margin-bottom:2px;">
			<label for="description">Description</label>
			<textarea rows="4" cols="50" id="description" name="description" style="display: block; margin-bottom:2px;" > </textarea>
			<button>Zapisz</button>
		</form>
            </div>
        </div>
    </div>
{% endblock page_content %}